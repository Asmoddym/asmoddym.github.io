<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/layout_project_item_parametring_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/layout_project_item_parametring_name_already_taken"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/this_name_is_already_taken"
        android:textColor="@color/colorRed"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:id="@+id/layout_project_item_parametring_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color4"
            android:text="@string/delete" />

        <Button
            android:id="@+id/layout_project_item_parametring_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/save" />

    </LinearLayout>
</LinearLayout>