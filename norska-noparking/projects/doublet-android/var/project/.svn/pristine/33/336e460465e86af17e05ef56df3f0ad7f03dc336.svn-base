package net.noparking.projects.database.polygon_annotation

import android.arch.persistence.room.*
import android.content.Context

@Database(entities = arrayOf(PolygonAnnotation::class), version = 6)
abstract class PolygonAnnotationDatabase : RoomDatabase() {

    abstract fun PolygonAnnotationDataDao(): PolygonAnnotationDataDao

    companion object {
        private var INSTANCE: PolygonAnnotationDatabase? = null

        fun getInstance(context: Context): PolygonAnnotationDatabase? {
            if (INSTANCE == null) {
                synchronized(PolygonAnnotationDatabase::class) {
                    INSTANCE = Room.databaseBuilder(context.getApplicationContext(),
                            PolygonAnnotationDatabase::class.java, "polygon_annotations.db")
                            .fallbackToDestructiveMigration()
                            .build()
                }
            }
            return INSTANCE
        }

        fun destroyInstance() {
            INSTANCE = null
        }
    }
}
