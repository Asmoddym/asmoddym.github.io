<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImageEditionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_edition_linearlayout_button"
        android:gravity="center">
        <net.noparking.projects.view.ImageEditionView.ImageEditionView
            android:id="@+id/image_edition_imageeditionview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </net.noparking.projects.view.ImageEditionView.ImageEditionView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_edition_linearlayout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@android:color/holo_green_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/image_edition_imagebutton_control_polygon_edition"
            style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/image_edition_imagebutton_control_annotations_edition"
            style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_sort_by_size" />

        <ImageButton
            android:id="@+id/image_edition_imagebutton_control_color_picker"
            style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/image_edition_imagebutton_control_clear_canvas"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>