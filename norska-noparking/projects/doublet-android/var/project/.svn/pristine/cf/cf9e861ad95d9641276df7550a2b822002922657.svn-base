package net.noparking.projects.database.line

import android.arch.persistence.room.*
import android.content.Context

@Database(entities = arrayOf(Line::class), version = 4)
abstract class LineDatabase : RoomDatabase() {

    abstract fun LineDataDao(): LineDataDao

    companion object {
        private var INSTANCE: LineDatabase? = null

        fun getInstance(context: Context): LineDatabase? {
            if (INSTANCE == null) {
                synchronized(LineDatabase::class) {
                    INSTANCE = Room.databaseBuilder(context.getApplicationContext(),
                            LineDatabase::class.java, "lines.db")
                            .fallbackToDestructiveMigration()
                            .build()
                }
            }
            return INSTANCE
        }

        fun destroyInstance() {
            INSTANCE = null
        }
    }
}
