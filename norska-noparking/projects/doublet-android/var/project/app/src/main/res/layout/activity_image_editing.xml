<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImageEditionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/coucou"
        app:layout_constraintTop_toTopOf="parent">


		<net.noparking.projects.view.ImageEditionView.ImageEditionView
            android:id="@+id/image_edition_imageeditionview"
            android:layout_width="match_parent"
			android:layout_margin="65dp"
            android:layout_height="match_parent" />
    </LinearLayout>

	<LinearLayout
		android:id="@+id/coucou"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/image_edition_view_current_color"
			android:layout_width="match_parent"
			android:layout_height="25dp"
			android:background="@color/colorPrimary"
			app:layout_constraintBottom_toTopOf="@id/image_edition_linearlayout_button" />

		<LinearLayout
			android:id="@+id/image_edition_linearlayout_button"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_gravity="bottom|center_horizontal"
			android:background="@color/colorPrimary"
			android:orientation="horizontal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			tools:ignore="UselessParent">




			<ImageButton
				android:id="@+id/image_edition_imagebutton_control_polygon_edition"
				style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:padding="8dp"
				android:src="@android:drawable/ic_menu_edit" />

			<ImageButton
				android:id="@+id/image_edition_imagebutton_control_annotations_edition"
				style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:padding="8dp"
				android:src="@android:drawable/ic_menu_sort_by_size" />

			<ImageButton
				android:id="@+id/image_edition_imagebutton_control_color_picker"
				style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:padding="8dp"
				android:src="@android:drawable/ic_menu_gallery" />

			<ImageButton
				android:id="@+id/image_edition_imagebutton_control_clear_canvas"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:padding="8dp"
				android:src="@android:drawable/ic_menu_delete" />
		</LinearLayout>

	</LinearLayout>

</android.support.constraint.ConstraintLayout>