<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProjectManagerActivity">

    <TextView
        android:id="@+id/project_manager_no_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/project_manager_controls"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/no_images" />

	<TextView
		android:id="@+id/project_manager_saving"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/project_manager_controls"
		android:gravity="center"
		android:textSize="40sp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="8dp"
		android:visibility="gone"
		android:text="@string/loading" />

    <ListView
        android:id="@+id/project_manager_images_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/project_manager_controls"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="11dp" />


	<LinearLayout
		android:id="@+id/project_manager_controls"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:ignore="UselessParent"
		android:gravity="center">

		<Button
			android:id="@+id/project_manager_new_image"
			android:layout_width="200dp"
			android:layout_height="75dp"
			android:layout_margin="20dp"
			android:textSize="20sp"
			android:text="@string/new_image" />
		<Button
			android:id="@+id/project_manager_export"
			android:layout_width="200dp"
			android:layout_height="75dp"

			android:layout_margin="20dp"

			android:textSize="20sp"
			android:text="@string/export" />

	</LinearLayout>



</android.support.constraint.ConstraintLayout>