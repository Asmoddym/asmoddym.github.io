<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/layout_project_item_parametring_input"
			android:layout_width="match_parent"
			android:layout_marginLeft="4dp"
			android:textSize="25sp"
			android:layout_height="75sp"
			android:layout_weight="2" />

		<ImageButton
			android:id="@+id/layout_project_item_parametring_pick_color"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_margin="8dp"
			android:padding="8dp"
			android:background="@android:color/holo_red_light"
			android:src="@android:drawable/ic_menu_gallery" />
	</LinearLayout>

    <TextView
        android:id="@+id/layout_project_item_parametring_name_already_taken"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/this_name_is_already_taken"
		android:textSize="15sp"
        android:textColor="@color/colorRed"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:id="@+id/layout_project_item_parametring_negative_button"
            android:layout_width="wrap_content"
			android:layout_height="75sp"
			android:layout_margin="10sp"
            android:textColor="@color/color4"
			android:textSize="20sp"
            android:text="@string/delete" />

        <Button
            android:id="@+id/layout_project_item_parametring_positive_button"
            android:layout_width="wrap_content"
			android:layout_height="75sp"
			android:layout_margin="10sp"
			android:textSize="20sp"
            android:text="@string/save" />

    </LinearLayout>
</LinearLayout>